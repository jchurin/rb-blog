<h2 class="dark-blue">
  <%= @article.title %>
  <% unless @article.user.nil? %>
  <span class="blue" style="font-size: 70%;">(<%= @article.user.email %> - <%= @article.visits_count %>)</span>
  <% end %>
</h2>
<% @article.categories.each do |category| %>
<%= link_to category.name, category, style:"color: #{category.color};" %>
<% end %>
<!-- <div class="field">
<%= image_tag @article.cover.url() %>
</div> -->
<%= Sanitize.fragment(@article.body, Sanitize::Config::RELAXED).html_safe %>
<div class="field">
  <%= link_to "Editar", edit_article_path(@article), class: "btn" %>
</div>
<div class="field">
  <h3>Comentarios</h3>
  <%= render "comments/form" %>
  <% @article.comments.each do |comment| %>
  <li><%= comment.body %> - <%= comment.user.email %></li>
  <% end %>
</div>
