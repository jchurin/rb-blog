<header>
  <nav class="be-orange white large-padding">
    <ul class="no-list row center-xs middle-xs">
      <li class="col-md-2">
        <h1 class="no-margin" id="logo"> <%= link_to "Blog Facilito", root_path %></h1>
      </li>
      <li class="col-md"><%= link_to "Articulos", articles_path %></li>
      <% @categories.each do |category| %>
        <li class="col-md"><%= link_to category.name, category %></li>
      <% end %>
      <li class="col-md-2">
        <% if user_signed_in?  %>
          <% if current_user.is_admin? %>
            <%= link_to "Dashboard", '/dashboard', method: :get, class: "nav-link" %> |
          <% end %>
          <%= link_to "Salir", destroy_user_session_path, method: :delete, class: "nav-link" %>
        <% else %>
          <%= link_to "Ingresar", new_user_session_path, class: "nav-link" %> |
          <%= link_to "Registrarme", new_user_registration_path, class: "nav-link" %>
        <% end %>
    </li>
    </ul>
  </nav>
</header>
